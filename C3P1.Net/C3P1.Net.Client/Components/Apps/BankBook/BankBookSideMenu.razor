@rendermode InteractiveAuto

<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="bankbook">
                <BarIcon IconName="customIcon" />
                BankBook
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>           
            <BarItem>
                <BarLink To="bankbook">
                    <BarIcon IconName="IconName.Dashboard" /> Dashboard
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="bankbook/account">
                        <BarIcon IconName="IconName.Server" /> Accounts
                </BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="bankbook/category">
                    <BarIcon IconName="IconName.Cart" /> Categories
                </BarLink>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem>
                <BarLink To="">
                    <BarIcon IconName="IconName.Moon" /> Exit
                </BarLink>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

@code {
    RenderFragment customIcon =@<img src="/pix/icons/bankbook.png" style="width:40px; height: 40px" />;
}
